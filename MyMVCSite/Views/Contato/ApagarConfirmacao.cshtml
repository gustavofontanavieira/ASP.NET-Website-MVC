@{
    ViewData["Title"] = "Confirmação de exclusão de contato";
}

<div class="text-center">
    <h3>Realmente deseja apagar o contato plei plou ?</h3>
    <a role="button" class="btn btn-outline-danger text-light"  asp-controller="Contato" asp-action="Apagar">Confirmar</a>
    <a role="button" class="btn btn-outline-info text-light ml-5" asp-controller="Contato" asp-action="Index">Cancelar</a>
</div>