@model ContatoModel
@{
    ViewData["Title"] = "Criar contatos";
}


<div>
    <h1 class="mt-4">Cadastrar Contato</h1>

    <div>
        <form class="mt-5" asp-controller="Contato" asp-action="Criar" method="post">
            <div class="mb-3 w-50">
                <input type="text" asp-for="Nome" class="form-control" id="exampleInputEmail1" placeholder="Nome completo">
            </div>
            <div class="mb-3 w-50">
                <input type="email" asp-for="Email" class="form-control" id="exampleInputPassword1" aria-describedby="emailHelp" placeholder="E-mail">
            </div>
            <div class="mb-3 w-50">
                <input type="text" asp-for="Numero" class="form-control" id="exampleInputPassword1" placeholder="Número de telefone">
            </div>
            <button type="submit" role="button" class="btn btn-outline-info mt-4">Cadastrar</button>
            <a role="button" asp-controller="Contato" asp-action="Index" class="btn btn-outline-secondary text-light mt-4 ml-4">Voltar</a>
        </form>
    </div>
</div>