@{
    ViewData["Title"] = "Editar contatos";
}


<div>
    <h1 class="mt-4">Editar Contato</h1>

    <div>
        <form class="mt-5">
            <div class="mb-3 w-50">
                <input type="text" class="form-control" id="exampleInputEmail1" placeholder="Nome completo">
            </div>
            <div class="mb-3 w-50">
                <input type="email" class="form-control" id="exampleInputPassword1" aria-describedby="emailHelp" placeholder="E-mail">
            </div>
            <div class="mb-3 w-50">
                <input type="text" class="form-control" id="exampleInputPassword1" placeholder="Número de telefone">
            </div>
            <a role="button" class="btn btn-outline-info mt-4">Editar</a>
            <a role="button" asp-controller="Contato" asp-action="Index" class="btn btn-outline-secondary text-light mt-4 ml-4">Voltar</a>
        </form>
    </div>
</div>