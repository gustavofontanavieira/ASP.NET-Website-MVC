@model ContatoModel 
@{
    ViewData["Title"] = "Editar contatos";
}


<div>
    <h1 class="mt-4">Editar Contato</h1>


   
    <div>
        <form class="mt-5" asp-controller="Contato" asp-action="Alterar" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="mb-3 w-50">
                <input type="text" class="form-control" asp-for="Nome" placeholder="Nome completo">
            </div>
            <div class="mb-3 w-50">
                <input type="email" class="form-control" asp-for="Email" aria-describedby="emailHelp" placeholder="E-mail">
            </div>
            <div class="mb-3 w-50">
                <input type="text" class="form-control" asp-for="Numero" placeholder="Número de telefone">
            </div>
            <button type="submit"class="btn btn-outline-info mt-4">Alterar</button>
            <a role="button" asp-controller="Contato" asp-action="Index" class="btn btn-outline-secondary text-light mt-4 ml-4">Voltar</a>
        </form>
    </div>
</div>