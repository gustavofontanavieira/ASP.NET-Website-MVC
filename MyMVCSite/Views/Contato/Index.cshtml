@model List<ContatoModel>

@{
    ViewData["Title"] = "Listagem de contatos";
}

<div class="text-center">
    <h1 class="mt-4">Listagem de contatos</h1>
    <table class="table table-dark table-sm mt-5">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nome</th>
                <th scope="col">E-mail</th>
                <th scope="col">Celular</th>
                <th scope="col"><a role="button" class="btn btn-outline-info text-light ml-3" asp-controller="Contato" asp-action="Criar">Novo contato</a></th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (ContatoModel contato in Model)
                {
                    <tr>
                        <th scope="row">@contato.Id</th>
                        <td>@contato.Nome</td>
                        <td>@contato.Email</td>
                        <td>@contato.Numero</td>
                        <td>
                            <div class="btn-group ml-3 " role="group" aria-label="Basic outlined example">
                                <a role="button" asp-router-id="@contato.Id" class="btn btn-outline-danger text-danger" asp-controller="Contato" asp-action="ApagarConfirmacao">Excluir</a>
                                <a role="button" asp-router-id="@contato.Id" class="btn btn-outline-light" asp-controller="Contato" asp-action="Editar">Editar</a>
                            </div>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>

</div>